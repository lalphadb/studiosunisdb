  "routes": {
    "membres": {
      "index": "GET /membres",
      "create": "GET /membres/create",
      "store": "POST /membres",
      "show": "GET /membres/{membre}",
      "edit": "GET /membres/{membre}/edit",
      "update": "PUT /membres/{membre}",
      "destroy": "DELETE /membres/{membre}",
      "export": "GET /export/membres",
      "progression": "GET /membres/{membre}/progression",
      "changer_ceinture": "POST /membres/{membre}/changer-ceinture"
    },
    "cours": {
      "index": "GET /cours",
      "create": "GET /cours/create",
      "store": "POST /cours",
      "show": "GET /cours/{cours}",
      "edit": "GET /cours/{cours}/edit",
      "update": "PUT /cours/{cours}",
      "destroy": "DELETE /cours/{cours}",
      "planning": "GET /planning-cours",
      "duplicate": "POST /cours/{cours}/duplicate"
    },
    "presences": {
      "index": "GET /presences",
      "tablette": "GET /presences/tablette",
      "marquer": "POST /presences/marquer",
