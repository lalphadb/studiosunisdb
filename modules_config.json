{
  "design_system": {
    "colors": {
      "primary": {
        "gradient": "from-blue-950 via-blue-900 to-blue-950",
        "card": "from-blue-900/60 to-indigo-900/60",
        "border": "border-blue-800/50",
        "text": {
          "primary": "text-white",
          "secondary": "text-blue-200",
          "muted": "text-blue-400"
        }
      },
      "status": {
        "success": {
          "bg": "bg-green-900/50",
          "text": "text-green-300",
          "border": "border-green-700"
        },
        "warning": {
          "bg": "bg-yellow-900/50",
          "text": "text-yellow-300",
          "border": "border-yellow-700"
        },
        "danger": {
          "bg": "bg-red-900/50",
          "text": "text-red-300",
          "border": "border-red-700"
        },
        "info": {
          "bg": "bg-blue-900/50",
          "text": "text-blue-300",
          "border": "border-blue-700"
        }
      }
    },
    "components": {
      "card": "bg-blue-900/60 backdrop-blur-xl border border-blue-800/50 rounded-xl shadow-lg",
      "button": {
        "primary": "bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-700 hover:to-indigo-800",
        "secondary": "bg-gradient-to-r from-green-600 to-emerald-700 hover:from-green-700 hover:to-emerald-800",
        "danger": "bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800"
      },
      "input": "bg-blue-950/60 border border-blue-800 rounded-lg px-4 py-2 text-white placeholder-blue-400 focus:outline-none focus:border-blue-500",
      "table": "bg-blue-900/60 backdrop-blur-xl border border-blue-800/50 rounded-xl overflow-hidden"
    }
