<?php
// config/telescope.php - CORRECTION DES PATHS

use Laravel\Telescope\Http\Middleware\Authorize;
use Laravel\Telescope\Watchers;

return [
    'enabled' => env('TELESCOPE_ENABLED', true),
    
    'driver' => env('TELESCOPE_DRIVER', 'database'),
    
    'storage' => [
        'database' => [
            'connection' => env('DB_CONNECTION', 'mysql'),
            'chunk' => 1000,
        ],
    ],

    'domain' => env('TELESCOPE_DOMAIN'),
    'path' => env('TELESCOPE_PATH', 'telescope'),

    'middleware' => [
        'web',
        Authorize::class,
    ],

    // 🔧 CORRECTION : Enlever only_paths pour capturer toutes les requêtes
    // 'only_paths' => [
    //     'admin/*',
    //     'api/*',
    // ],

    // ❌ Ignorer seulement les chemins inutiles
    'ignore_paths' => [
        'telescope*',
        'vendor/*',
        'nova-api*',
        'pulse*',
        'sanctum*',
        '_debugbar*',
        'livewire*',
        'favicon.ico',
        '*.js',
        '*.css',
        '*.png',
        '*.jpg',
        '*.gif',
        '*.svg',
    ],

    'ignore_commands' => [
        'queue:work',
        'queue:listen',
        'horizon:work',
        'horizon:supervisor',
        'schedule:run',
        'schedule:finish',
    ],

    // 🎯 WATCHERS CORRIGÉS POUR STUDIOSUNISDB
    'watchers' => [
        // ✅ EXCEPTIONS - Toujours actif
        Watchers\ExceptionWatcher::class => [
            'enabled' => env('TELESCOPE_EXCEPTION_WATCHER', true),
        ],

        // ✅ LOGS - Erreurs seulement
        Watchers\LogWatcher::class => [
            'enabled' => env('TELESCOPE_LOG_WATCHER', true),
            'level' => 'error',
        ],

        // ✅ REQUÊTES - Toutes les requêtes
        Watchers\RequestWatcher::class => [
            'enabled' => env('TELESCOPE_REQUEST_WATCHER', true),
            'size_limit' => 64,
            'ignore_http_methods' => [],
            'ignore_status_codes' => [],
        ],

        // ✅ QUERIES - Requêtes lentes
        Watchers\QueryWatcher::class => [
            'enabled' => env('TELESCOPE_QUERY_WATCHER', true),
            'ignore_packages' => true,
            'slow' => 100, // Réduire à 100ms pour plus de détection
        ],

        // ✅ COMMANDS - Commandes Artisan
        Watchers\CommandWatcher::class => [
            'enabled' => env('TELESCOPE_COMMAND_WATCHER', true),
            'ignore' => [
                'schedule:run',
                'schedule:finish',
                'package:discover',
                'config:cache',
                'route:cache',
                'view:cache',
            ],
        ],

        // ✅ JOBS - Tâches en arrière-plan
        Watchers\JobWatcher::class => [
            'enabled' => env('TELESCOPE_JOB_WATCHER', true),
        ],

        // ✅ SCHEDULE - Tâches planifiées
        Watchers\ScheduleWatcher::class => [
            'enabled' => env('TELESCOPE_SCHEDULE_WATCHER', true),
        ],

        // ⚠️ MAIL - Si vous utilisez les emails
        Watchers\MailWatcher::class => [
            'enabled' => env('TELESCOPE_MAIL_WATCHER', true),
        ],

        // ⚠️ NOTIFICATIONS - Pour les notifications
        Watchers\NotificationWatcher::class => [
            'enabled' => env('TELESCOPE_NOTIFICATION_WATCHER', false),
        ],

        // ❌ CACHE - Trop verbeux, désactivé
        Watchers\CacheWatcher::class => [
            'enabled' => env('TELESCOPE_CACHE_WATCHER', false),
        ],

        // ❌ EVENTS - Trop verbeux
        Watchers\EventWatcher::class => [
            'enabled' => env('TELESCOPE_EVENT_WATCHER', false),
        ],

        // ❌ MODELS - Trop verbeux
        Watchers\ModelWatcher::class => [
            'enabled' => env('TELESCOPE_MODEL_WATCHER', false),
        ],

        // ❌ VIEWS - Pas nécessaire
        Watchers\ViewWatcher::class => [
            'enabled' => env('TELESCOPE_VIEW_WATCHER', false),
