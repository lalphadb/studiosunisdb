<?php

namespace App\Policies;

use App\Models\Cours;
use App\Models\User;
use Illuminate\Auth\Access\HandlesAuthorization;

class CoursPolicy
{
    use HandlesAuthorization;

    public function viewAny(User $user)
    {
        return $user->can('view-cours') || $user->hasAnyRole(['superadmin', 'admin', 'instructeur']);
    }

    public function view(User $user, Cours $cours)
    {
        // SuperAdmin : accès total
        if ($user->hasRole('superadmin')) {
            return true;
        }

        // Admin/Instructeur : seulement leur école ET permission
        return $user->can('view-cours') && $user->ecole_id === $cours->ecole_id;
    }

    public function create(User $user)
    {
        return $user->can('create-cours') || $user->hasAnyRole(['superadmin', 'admin']);
    }

    public function update(User $user, Cours $cours)
    {
        // SuperAdmin : accès total
        if ($user->hasRole('superadmin')) {
            return true;
        }

        // Admin : seulement leur école ET permission
        return $user->can('edit-cours') && 
               $user->hasRole('admin') && 
               $user->ecole_id === $cours->ecole_id;
    }

    public function delete(User $user, Cours $cours)
    {
        // SuperAdmin : accès total
        if ($user->hasRole('superadmin')) {
            return true;
        }

        // Admin : seulement leur école ET permission
        return $user->can('delete-cours') && 
               $user->hasRole('admin') && 
               $user->ecole_id === $cours->ecole_id;
    }
}
